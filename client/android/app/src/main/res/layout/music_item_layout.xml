<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#F3D6E6F4"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/music_thumbnail"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/logo"
            />

        <LinearLayout
            android:id="@+id/music_text_layout"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/music_thumbnail"
            android:layout_marginStart="10dp"
            >

            <TextView
                android:id="@+id/music_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alike_angular"
                android:maxLines="1"
                android:text="@string/music_title"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/music_author"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/alike_angular"
                    android:maxLines="1"
                    android:text="@string/music_author"
                    android:paddingTop="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textStyle="bold"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/music_divider"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/alike_angular"
                    android:maxLines="1"
                    android:text="@string/music_divider"
                    android:paddingTop="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_toEndOf="@id/music_author"
                    />

                <TextView
                    android:id="@+id/music_description"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/alike_angular"
                    android:maxLines="1"
                    android:text="@string/music_description"
                    android:paddingTop="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_toEndOf="@id/music_divider"
                    />

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/toggle_browser"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/music_text_layout"
            android:src="@drawable/open_in_browser_icon_24"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>